<MenuItem x:Class="CubeX.Windows.CubeXMenuItemIcon"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			Header="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Command.Text}"
			mc:Ignorable="d" 
			d:DesignHeight="30" d:DesignWidth="120">
	<MenuItem.Icon>
		<Image Width="16" Height="16" Stretch="Fill" Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
			AncestorType=MenuItem}, Path=Command.IconSource}"/>
	</MenuItem.Icon>
</MenuItem>
